<%= turbo_frame_tag :company_reviews do %>
  <% if @reviews.any? %>
    <%= render partial: 'companies/reviews/review', collection: @reviews %>

  <% else %>
    <div class='flex flex-col items-center mb-8'>
      <%= render_icon(:sad_face, classes: 'w-12') %>
      <p>Oh no! No one has left a Review yet!</p>
    </div>

  <% end %>
<% end %>
