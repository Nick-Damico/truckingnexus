<div class='h-full'>
  <div class='flex flex-col h-full md:flex-row gap-8'>
    <%= render 'side-navigation' %>
    <main class='flex flex-col w-full md:w-3/4 gap-y-2'>
      <section class='bg-white p-4 rounded-lg border border-zinc-300'>
        <h2 class="font-bold text-2xl mb-2">Manage your Data</h1>
        <%= form_with model: @user do |form| %>
          <div class="flex flex-col items-stretch mb-2 lg:w-1/2">
            <%= form.label :username, class: "text-gray-700 text-sm font-bold mb-2" %>
            <%= form.text_field :username, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
          <div class="flex items-center mb-4 lg:w-1/2">
            <%= form.submit 'Save', class: "text-center bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline actions cursor-pointer" %>
          </div>
        <% end %>
      </section>
      <section class='bg-white p-4 rounded-lg border border-zinc-300'>
        <h2 class="font-bold text-2xl">Profile Data</h1>
        <p>See your reviews, conversations, quizzes, and trip-planning.</p>
      </section>
    </main>
  </main>
</div>
</div>
